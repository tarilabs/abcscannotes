    <Button android:text="Scan" android:id="@+id/buttonScanD" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
