    <Button android:text="Scan" android:id="@+id/buttonScanA" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	   
    <TextView android:text="D" android:id="@+id/textViewD" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
